@model CMSNews.Models.ViewModels.NewsGroupViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>tblNewsGroup</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field برای Id -->
            <input type="hidden" asp-for="NewsGroupId" />
            <input type="hidden" asp-for="ImageName" /> @* عکس قبلی رو نگه می‌داره *@

            <div class="form-group">
                <label asp-for="NewsGroupTitle" class="control-label"></label>
                <input asp-for="NewsGroupTitle" class="form-control" />
                <span asp-validation-for="NewsGroupTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>تصویر فعلی</label>
                <div>
                    <img src="~/Image/news-group/@Model.ImageName" alt="Current Image" class="img60x60" id="imgPrev" />
                </div>
                <input type="file" id="imgUpload" name="imgUpload" onchange="showPreview(this)" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function showPreview(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("imgPrev").src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
