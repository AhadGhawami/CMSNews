@model IEnumerable<CMSNews.Models.ViewModels.NewsGroupViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsGroupTitle)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.NewsGroupId)
            </td>
                <td>
                    <img src="~/Image/news-group/@item.ImageName" class="img60x60" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsGroupTitle)
            </td>
            <td>
                    <a asp-action="Edit" asp-controller="NewsGroups" asp-area="Admin" asp-route-id="@item.NewsGroupId">Edit</a>|
                    <a asp-action="Details" asp-controller="NewsGroups" asp-area="Admin" asp-route-id="@item.NewsGroupId">Details</a>|
                    <form asp-action="Delete" asp-route-id="@item.NewsGroupId" method="post" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید حذف کنید؟')">
                        <button type="submit" class="btn btn-danger btn-sm">حذف</button>
                    </form>

            </td>
        </tr>
}
    </tbody>
</table>
