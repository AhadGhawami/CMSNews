@model CMSNews.Models.ViewModels.AdminDashboardViewModel

<h2 class="mb-4">داشبورد مدیریت</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">کل کاربران</h5>
                <p class="card-text">@Model.TotalUsers نفر</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">کاربران فعال</h5>
                <p class="card-text">@Model.ActiveUsers نفر</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">غیرفعال‌ها</h5>
                <p class="card-text">@Model.InactiveUsers نفر</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark mb-3">
            <div class="card-body">
                <h5 class="card-title">تعداد اخبار</h5>
                <p class="card-text">@Model.TotalNews خبر</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-info text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">گروه‌های خبری</h5>
                <p class="card-text">@Model.NewsGroupsCount گروه</p>
            </div>
        </div>
    </div>
</div>