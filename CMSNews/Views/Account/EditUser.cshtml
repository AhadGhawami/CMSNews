@model CMSNews.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "ویرایش کاربر";
}

<h2 class="text-center mb-4">ویرایش اطلاعات کاربر</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="MobileNumber"></label>
        <input asp-for="MobileNumber" class="form-control" />
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive"></label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">فعال</option>
            <option value="false">غیرفعال</option>
        </select>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterDate"></label>
        <input asp-for="RegisterDate" class="form-control" type="date" />
        <span asp-validation-for="RegisterDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">ذخیره تغییرات</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}